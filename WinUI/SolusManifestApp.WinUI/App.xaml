<Application
    x:Class="SolusManifestApp.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:SolusManifestApp.WinUI.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>

            <!-- Value Converters -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <converters:NullToVisibilityInverseConverter x:Key="NullToVisibilityInverseConverter"/>
            <converters:BytesToStringConverter x:Key="BytesToStringConverter"/>
            <converters:PercentageConverter x:Key="PercentageConverter"/>
            <converters:EnumToStringConverter x:Key="EnumToStringConverter"/>

            <!-- Missing resources that WinUI sometimes needs -->
            <CornerRadius x:Key="OverlayCornerRadius">8</CornerRadius>
            <CornerRadius x:Key="ControlCornerRadius">4</CornerRadius>
            <x:Double x:Key="ContentDialogMinWidth">320</x:Double>
            <x:Double x:Key="ContentDialogMaxWidth">548</x:Double>

            <!-- Other app resources here -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
