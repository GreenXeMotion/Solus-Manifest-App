<Page x:Class="SolusManifestApp.WinUI.Views.LuaInstallerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      x:Name="Root"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      AllowDrop="True"
      DragOver="Page_DragOver"
      Drop="Page_Drop"
      DragLeave="Page_DragLeave">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Lua Installer"
                       FontSize="32"
                       FontWeight="Bold"/>
            <TextBlock Text="Install .lua files, .manifest files, or .zip archives to Steam"
                       FontSize="14"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" MaxWidth="800" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Drop Zone -->
            <Border Grid.Row="0"
                    x:Name="DropZone"
                    MinHeight="400"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="20">
                <Grid>
                    <!-- Default State -->
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="{x:Bind ViewModel.HasFileSelected, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                        <TextBlock Text="ðŸ“¦"
                                   FontSize="72"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>
                        <TextBlock Text="Drop .zip, .lua, or .manifest files here"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="or"
                                   FontSize="14"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <Button Click="BrowseButton_Click"
                                Style="{StaticResource AccentButtonStyle}"
                                Padding="30,12"
                                FontSize="14"
                                HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="ðŸ“"/>
                                <TextBlock Text="Browse Files"/>
                            </StackPanel>
                        </Button>
                        <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                                   FontSize="12"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,20,0,0"
                                   TextWrapping="Wrap"
                                   MaxWidth="600"
                                   TextAlignment="Center"/>
                    </StackPanel>

                    <!-- File Selected State -->
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="{x:Bind ViewModel.HasFileSelected, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="âœ“"
                                   FontSize="72"
                                   Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>
                        <TextBlock Text="File Selected"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                CornerRadius="8"
                                Padding="20,15"
                                Margin="0,10,0,20">
                            <StackPanel Spacing="10">
                                <TextBlock Text="{x:Bind ViewModel.SelectedFileName, Mode=OneWay}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           MaxWidth="500"
                                           TextAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                                           FontSize="12"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           MaxWidth="500"
                                           TextAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                            <Button Command="{x:Bind ViewModel.InstallFileCommand}"
                                    Style="{StaticResource AccentButtonStyle}"
                                    Padding="40,12"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    IsEnabled="{x:Bind ViewModel.IsInstalling, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="âš™ï¸"/>
                                    <TextBlock Text="Install"/>
                                </StackPanel>
                            </Button>
                            <Button Content="Clear"
                                    Command="{x:Bind ViewModel.ClearSelectionCommand}"
                                    Padding="30,12"
                                    FontSize="14"
                                    IsEnabled="{x:Bind ViewModel.IsInstalling, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"/>
                        </StackPanel>

                        <!-- Installing Progress -->
                        <StackPanel Visibility="{x:Bind ViewModel.IsInstalling, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                    Margin="0,20,0,0"
                                    Spacing="10">
                            <TextBlock Text="Installing..."
                                       FontSize="14"
                                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                       HorizontalAlignment="Center"/>
                            <ProgressRing IsActive="True"
                                          Width="40"
                                          Height="40"
                                          HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Profile Selector (GreenLuma mode only) -->
            <Border Grid.Row="1"
                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,20,0,0"
                    Visibility="{x:Bind ViewModel.IsGreenLumaMode, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Install to Profile:"
                               FontSize="14"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{x:Bind ViewModel.Profiles, Mode=OneWay}"
                              SelectedItem="{x:Bind ViewModel.SelectedProfile, Mode=TwoWay}"
                              DisplayMemberPath="Name"
                              MinWidth="200"
                              FontSize="14"/>
                </StackPanel>
            </Border>

            <!-- Help Text -->
            <Border Grid.Row="2"
                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,10,0,0">
                <StackPanel Spacing="10">
                    <TextBlock Text="â„¹ï¸ How it works"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,0,0,0"/>

                    <!-- SteamTools Mode Instructions -->
                    <TextBlock FontSize="12"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               TextWrapping="Wrap"
                               Visibility="{x:Bind ViewModel.IsGreenLumaMode, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                        <Run Text="â€¢ .lua files will be copied to your Steam stplug-in folder"/><LineBreak/>
                        <Run Text="â€¢ .manifest files will be copied to your Steam depotcache folder"/><LineBreak/>
                        <Run Text="â€¢ .zip archives will be extracted automatically"/><LineBreak/>
                        <Run Text="â€¢ Remember to restart Steam after installation for changes to take effect"/>
                    </TextBlock>

                    <!-- GreenLuma Mode Instructions -->
                    <TextBlock FontSize="12"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               TextWrapping="Wrap"
                               Visibility="{x:Bind ViewModel.IsGreenLumaMode, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Run Text="â€¢ .lua files are used temporarily to extract depot keys (not installed)"/><LineBreak/>
                        <Run Text="â€¢ .manifest files (selected depots only) will be copied to depotcache"/><LineBreak/>
                        <Run Text="â€¢ AppList entries will be generated for the game and depots"/><LineBreak/>
                        <Run Text="â€¢ ACF file will be created in steamapps folder"/><LineBreak/>
                        <Run Text="â€¢ Depot keys will be added to Steam config.vdf"/><LineBreak/>
                        <Run Text="â€¢ Remember to restart Steam after installation for changes to take effect"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
