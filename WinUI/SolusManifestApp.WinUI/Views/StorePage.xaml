<Page
    x:Class="SolusManifestApp.WinUI.Views.StorePage"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Padding="40,40,40,20" Spacing="16">
            <TextBlock
                Text="Game Store"
                Style="{StaticResource TitleTextBlockStyle}"/>

            <TextBlock
                Text="Browse and download game manifests from the Morrenus API"
                Style="{StaticResource BodyTextBlockStyle}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

            <!-- Search and Filter Bar -->
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <TextBox
                    Grid.Column="0"
                    PlaceholderText="Search games..."
                    Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    KeyDown="SearchBox_KeyDown">
                    <TextBox.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Enter" Invoked="SearchBox_EnterPressed"/>
                    </TextBox.KeyboardAccelerators>
                </TextBox>

                <!-- Sort ComboBox -->
                <ComboBox
                    Grid.Column="1"
                    PlaceholderText="Sort by"
                    SelectedItem="{x:Bind ViewModel.SortBy, Mode=TwoWay}"
                    MinWidth="150">
                    <ComboBoxItem Content="Name"/>
                    <ComboBoxItem Content="AppID"/>
                    <ComboBoxItem Content="Recently Added"/>
                </ComboBox>

                <!-- Refresh Button -->
                <Button
                    Grid.Column="2"
                    Command="{x:Bind ViewModel.RefreshLibraryCommand}"
                    ToolTipService.ToolTip="Refresh library">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                        <TextBlock Text="Refresh"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Status Bar -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                    <Run Text="Showing"/>
                    <Run Text="{x:Bind ViewModel.Games.Count, Mode=OneWay}"/>
                    <Run Text="of"/>
                    <Run Text="{x:Bind ViewModel.TotalCount, Mode=OneWay}"/>
                    <Run Text="games"/>
                </TextBlock>

                <TextBlock
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    Text="âš  API Key not configured"
                    Visibility="{x:Bind ViewModel.IsApiKeyConfigured, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}"/>
            </Grid>
        </StackPanel>

        <!-- Games Grid -->
        <Grid Grid.Row="1" Padding="40,0,40,40">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Games ListView -->
            <ListView
                Grid.Row="0"
                ItemsSource="{x:Bind ViewModel.Games, Mode=OneWay}"
                SelectionMode="Single"
                IsItemClickEnabled="True"
                ItemClick="GameItem_Click">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="12" ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Game Icon -->
                            <Border
                                Grid.Column="0"
                                Width="60"
                                Height="60"
                                CornerRadius="8"
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                                <Image
                                    Source="{Binding IconUrl}"
                                    Stretch="UniformToFill"/>
                            </Border>

                            <!-- Game Info -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                <TextBlock
                                    Text="{Binding Name}"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"
                                    TextTrimming="CharacterEllipsis"/>
                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    TextTrimming="CharacterEllipsis">
                                    <Run Text="AppID:"/>
                                    <Run Text="{Binding AppId}"/>
                                </TextBlock>
                            </StackPanel>

                            <!-- Download Button -->
                            <Button
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Command="{Binding ElementName=Root, Path=ViewModel.DownloadGameCommand}"
                                CommandParameter="{Binding}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE896;" FontSize="16"/>
                                    <TextBlock Text="Download"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Empty State -->
            <StackPanel
                Grid.Row="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Spacing="16"
                Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                <FontIcon
                    Glyph="&#xE7C3;"
                    FontSize="64"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Visibility="{x:Bind ViewModel.HasGames, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}"/>
                <TextBlock
                    Text="No games found"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Visibility="{x:Bind ViewModel.HasGames, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}"/>
            </StackPanel>

            <!-- Loading Indicator -->
            <ProgressRing
                Grid.Row="0"
                Width="60"
                Height="60"
                IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- Pagination Bar -->
            <Grid Grid.Row="1" Margin="0,16,0,0" ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Previous Button -->
                <Button
                    Grid.Column="0"
                    Command="{x:Bind ViewModel.PreviousPageCommand}"
                    IsEnabled="{x:Bind ViewModel.CanGoPrevious, Mode=OneWay}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE76B;" FontSize="16"/>
                        <TextBlock Text="Previous"/>
                    </StackPanel>
                </Button>

                <!-- Page Info -->
                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="8">
                    <TextBlock Text="Page"/>
                    <NumberBox
                        Value="{x:Bind ViewModel.CurrentPage, Mode=TwoWay}"
                        Minimum="1"
                        Maximum="{x:Bind ViewModel.TotalPages, Mode=OneWay}"
                        SpinButtonPlacementMode="Compact"
                        Width="100"
                        ValueChanged="PageNumber_ValueChanged"/>
                    <TextBlock Text="of"/>
                    <TextBlock Text="{x:Bind ViewModel.TotalPages, Mode=OneWay}"/>
                </StackPanel>

                <!-- Next Button -->
                <Button
                    Grid.Column="2"
                    Command="{x:Bind ViewModel.NextPageCommand}"
                    IsEnabled="{x:Bind ViewModel.CanGoNext, Mode=OneWay}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Next"/>
                        <FontIcon Glyph="&#xE76C;" FontSize="16"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Page>
