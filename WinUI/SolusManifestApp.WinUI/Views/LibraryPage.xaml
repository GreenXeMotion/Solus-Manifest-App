<Page
    x:Class="SolusManifestApp.WinUI.Views.LibraryPage"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Padding="40,40,40,20" Spacing="16">
            <TextBlock
                Text="Game Library"
                Style="{StaticResource TitleTextBlockStyle}"/>

            <TextBlock
                Text="Manage your Steam games and GreenLuma profiles"
                Style="{StaticResource BodyTextBlockStyle}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

            <!-- Profile Selector and Actions -->
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Profile ComboBox -->
                <ComboBox
                    Grid.Column="0"
                    Header="Active Profile"
                    PlaceholderText="Select a profile"
                    ItemsSource="{x:Bind ViewModel.Profiles, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.ActiveProfile, Mode=TwoWay}"
                    DisplayMemberPath="Name"
                    MinWidth="200"/>

                <!-- Create Profile Button -->
                <Button
                    Grid.Column="1"
                    Command="{x:Bind ViewModel.CreateProfileCommand}"
                    ToolTipService.ToolTip="Create new profile">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;" FontSize="16"/>
                        <TextBlock Text="New Profile"/>
                    </StackPanel>
                </Button>

                <!-- Delete Profile Button -->
                <Button
                    Grid.Column="2"
                    Command="{x:Bind ViewModel.DeleteProfileCommand}"
                    IsEnabled="{x:Bind ViewModel.CanDeleteProfile, Mode=OneWay}"
                    ToolTipService.ToolTip="Delete current profile">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                        <TextBlock Text="Delete"/>
                    </StackPanel>
                </Button>

                <!-- Refresh Button -->
                <Button
                    Grid.Column="3"
                    Command="{x:Bind ViewModel.RefreshLibraryCommand}"
                    ToolTipService.ToolTip="Refresh library">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                        <TextBlock Text="Refresh"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Search and Filter Bar -->
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <TextBox
                    Grid.Column="0"
                    PlaceholderText="Search games..."
                    Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Filter ComboBox -->
                <ComboBox
                    Grid.Column="1"
                    PlaceholderText="Filter"
                    SelectedItem="{x:Bind ViewModel.FilterMode, Mode=TwoWay}"
                    MinWidth="150">
                    <ComboBoxItem Content="All Games"/>
                    <ComboBoxItem Content="Steam Only"/>
                    <ComboBoxItem Content="GreenLuma Only"/>
                    <ComboBoxItem Content="Lua Scripts"/>
                </ComboBox>
            </Grid>

            <!-- Statistics Bar -->
            <Grid ColumnSpacing="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Spacing="4">
                    <TextBlock Text="Total Games" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                    <TextBlock Text="{x:Bind ViewModel.TotalGames, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}" FontSize="20"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Spacing="4">
                    <TextBlock Text="Steam" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                    <TextBlock Text="{x:Bind ViewModel.SteamGamesCount, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}" FontSize="20"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Spacing="4">
                    <TextBlock Text="GreenLuma" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                    <TextBlock Text="{x:Bind ViewModel.GreenLumaGamesCount, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}" FontSize="20"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Spacing="4">
                    <TextBlock Text="Lua Scripts" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                    <TextBlock Text="{x:Bind ViewModel.LuaScriptsCount, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}" FontSize="20"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Games Grid -->
        <Grid Grid.Row="1" Padding="40,0,40,40">
            <!-- Games ListView -->
            <ListView
                ItemsSource="{x:Bind ViewModel.LibraryItems, Mode=OneWay}"
                SelectionMode="Single"
                IsItemClickEnabled="True"
                ItemClick="GameItem_Click">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="12" ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Game Icon -->
                            <Border
                                Grid.Column="0"
                                Width="60"
                                Height="60"
                                CornerRadius="8"
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                                <FontIcon Glyph="&#xE7FC;" FontSize="32" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </Border>

                            <!-- Game Info -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                <TextBlock
                                    Text="{Binding GameName}"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"
                                    TextTrimming="CharacterEllipsis"/>
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <TextBlock
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        TextTrimming="CharacterEllipsis">
                                        <Run Text="AppID:"/>
                                        <Run Text="{Binding AppId}"/>
                                    </TextBlock>
                                    <Border
                                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                                        CornerRadius="4"
                                        Padding="8,2">
                                        <TextBlock
                                            Text="{Binding Source}"
                                            FontSize="10"
                                            Foreground="White"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>

                            <!-- Launch Button -->
                            <Button
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Command="{Binding ElementName=Root, Path=ViewModel.LaunchGameCommand}"
                                CommandParameter="{Binding}"
                                ToolTipService.ToolTip="Launch game">
                                <FontIcon Glyph="&#xE768;" FontSize="16"/>
                            </Button>

                            <!-- Actions Menu -->
                            <Button Grid.Column="3" VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE712;" FontSize="16"/>
                                <Button.Flyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem
                                            Text="Add to GreenLuma"
                                            Command="{Binding ElementName=Root, Path=ViewModel.AddToGreenLumaCommand}"
                                            CommandParameter="{Binding}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE710;"/>
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem
                                            Text="Remove from GreenLuma"
                                            Command="{Binding ElementName=Root, Path=ViewModel.RemoveFromGreenLumaCommand}"
                                            CommandParameter="{Binding}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE738;"/>
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutSeparator/>
                                        <MenuFlyoutItem
                                            Text="Uninstall"
                                            Command="{Binding ElementName=Root, Path=ViewModel.UninstallGameCommand}"
                                            CommandParameter="{Binding}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE74D;"/>
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </Button.Flyout>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Empty State -->
            <StackPanel
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Spacing="16"
                Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                <FontIcon
                    Glyph="&#xE7C3;"
                    FontSize="64"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Visibility="{x:Bind ViewModel.HasGames, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}"/>
                <TextBlock
                    Text="No games found"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Visibility="{x:Bind ViewModel.HasGames, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}"/>
            </StackPanel>

            <!-- Loading Indicator -->
            <ProgressRing
                Width="60"
                Height="60"
                IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </Grid>
    </Grid>
</Page>
