<Page
    x:Class="SolusManifestApp.WinUI.Views.DownloadsPage"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Padding="40,40,40,20" Spacing="16">
            <TextBlock
                Text="Downloads"
                Style="{StaticResource TitleTextBlockStyle}"/>

            <TextBlock
                Text="Monitor and manage your downloads"
                Style="{StaticResource BodyTextBlockStyle}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

            <!-- Statistics Bar -->
            <Grid ColumnSpacing="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Spacing="4">
                    <TextBlock Text="Active" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                    <TextBlock Text="{x:Bind ViewModel.ActiveCount, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}" FontSize="20"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Spacing="4">
                    <TextBlock Text="Queued" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                    <TextBlock Text="{x:Bind ViewModel.QueuedCount, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}" FontSize="20"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Spacing="4">
                    <TextBlock Text="Completed" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                    <TextBlock Text="{x:Bind ViewModel.CompletedCount, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}" FontSize="20"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Spacing="4">
                    <TextBlock Text="Failed" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                    <TextBlock Text="{x:Bind ViewModel.FailedCount, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}" FontSize="20"/>
                </StackPanel>

                <CheckBox
                    Grid.Column="4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Content="Auto-install after download"
                    IsChecked="{x:Bind ViewModel.AutoInstallAfterDownload, Mode=TwoWay}"/>
            </Grid>
        </StackPanel>

        <!-- Downloads Content -->
        <ScrollViewer Grid.Row="1" Padding="40,0,40,40">
            <StackPanel Spacing="24">
                <!-- Active Downloads Section -->
                <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.HasActiveDownloads, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <TextBlock
                            Text="Active Downloads"
                            Style="{StaticResource SubtitleTextBlockStyle}"/>
                    </Grid>

                    <ItemsControl ItemsSource="{x:Bind ViewModel.ActiveDownloads, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0,0,0,8">
                                    <Grid RowSpacing="8">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header -->
                                        <Grid Grid.Row="0" ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Spacing="4">
                                                <TextBlock
                                                    Text="{Binding GameName}"
                                                    Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                                <TextBlock
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                    FontSize="12">
                                                    <Run Text="AppID:"/>
                                                    <Run Text="{Binding AppId}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <Button
                                                Grid.Column="1"
                                                Command="{Binding ElementName=Root, Path=ViewModel.CancelDownloadCommand}"
                                                CommandParameter="{Binding}"
                                                ToolTipService.ToolTip="Cancel download">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <FontIcon Glyph="&#xE711;" FontSize="14"/>
                                                    <TextBlock Text="Cancel"/>
                                                </StackPanel>
                                            </Button>
                                        </Grid>

                                        <!-- Progress Bar -->
                                        <ProgressBar
                                            Grid.Row="1"
                                            Value="{Binding Progress}"
                                            Maximum="100"
                                            IsIndeterminate="{Binding IsIndeterminate}"/>

                                        <!-- Status Info -->
                                        <Grid Grid.Row="2" ColumnSpacing="16">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Grid.Column="0"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                FontSize="12">
                                                <Run Text="{Binding Progress, Converter={StaticResource PercentageConverter}}"/>
                                            </TextBlock>

                                            <TextBlock
                                                Grid.Column="1"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                FontSize="12">
                                                <Run Text="{Binding DownloadedBytes, Converter={StaticResource BytesToStringConverter}}"/>
                                                <Run Text="/"/>
                                                <Run Text="{Binding TotalBytes, Converter={StaticResource BytesToStringConverter}}"/>
                                            </TextBlock>

                                            <TextBlock
                                                Grid.Column="2"
                                                HorizontalAlignment="Right"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                FontSize="12"
                                                Text="{Binding Status}"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Queued Downloads Section -->
                <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.HasQueuedDownloads, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock
                        Text="Queued Downloads"
                        Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <ItemsControl ItemsSource="{x:Bind ViewModel.QueuedDownloads, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0,0,0,8">
                                    <Grid ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Spacing="4">
                                            <TextBlock
                                                Text="{Binding GameName}"
                                                Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                            <TextBlock
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                FontSize="12">
                                                <Run Text="AppID:"/>
                                                <Run Text="{Binding AppId}"/>
                                                <Run Text="• Waiting in queue"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <Button
                                            Grid.Column="1"
                                            Command="{Binding ElementName=Root, Path=ViewModel.CancelDownloadCommand}"
                                            CommandParameter="{Binding}"
                                            ToolTipService.ToolTip="Remove from queue">
                                            <FontIcon Glyph="&#xE711;" FontSize="14"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Completed Downloads Section -->
                <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.HasCompletedDownloads, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <TextBlock
                            Text="Completed Downloads"
                            Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <Button
                            HorizontalAlignment="Right"
                            Command="{x:Bind ViewModel.ClearCompletedCommand}"
                            ToolTipService.ToolTip="Clear all completed">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                <TextBlock Text="Clear All"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <ItemsControl ItemsSource="{x:Bind ViewModel.CompletedDownloads, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0,0,0,8">
                                    <Grid ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <FontIcon
                                            Grid.Column="0"
                                            Glyph="&#xE73E;"
                                            FontSize="24"
                                            Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                            <TextBlock
                                                Text="{Binding GameName}"
                                                Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                            <TextBlock
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                FontSize="12">
                                                <Run Text="AppID:"/>
                                                <Run Text="{Binding AppId}"/>
                                                <Run Text="• Completed"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <Button
                                            Grid.Column="2"
                                            Command="{Binding ElementName=Root, Path=ViewModel.InstallDownloadCommand}"
                                            CommandParameter="{Binding}"
                                            ToolTipService.ToolTip="Install now">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon Glyph="&#xE895;" FontSize="14"/>
                                                <TextBlock Text="Install"/>
                                            </StackPanel>
                                        </Button>

                                        <Button
                                            Grid.Column="3"
                                            Command="{Binding ElementName=Root, Path=ViewModel.RemoveCompletedCommand}"
                                            CommandParameter="{Binding}"
                                            ToolTipService.ToolTip="Remove from list">
                                            <FontIcon Glyph="&#xE711;" FontSize="14"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Failed Downloads Section -->
                <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.HasFailedDownloads, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <TextBlock
                            Text="Failed Downloads"
                            Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <Button
                            HorizontalAlignment="Right"
                            Command="{x:Bind ViewModel.ClearFailedCommand}"
                            ToolTipService.ToolTip="Clear all failed">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                <TextBlock Text="Clear All"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <ItemsControl ItemsSource="{x:Bind ViewModel.FailedDownloads, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource SystemFillColorCriticalBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0,0,0,8">
                                    <Grid ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <FontIcon
                                            Grid.Column="0"
                                            Glyph="&#xE783;"
                                            FontSize="24"
                                            Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                            <TextBlock
                                                Text="{Binding GameName}"
                                                Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                            <TextBlock
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                FontSize="12">
                                                <Run Text="AppID:"/>
                                                <Run Text="{Binding AppId}"/>
                                            </TextBlock>
                                            <TextBlock
                                                Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                                FontSize="12"
                                                Text="{Binding ErrorMessage}"
                                                TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <Button
                                            Grid.Column="2"
                                            Command="{Binding ElementName=Root, Path=ViewModel.RetryDownloadCommand}"
                                            CommandParameter="{Binding}"
                                            ToolTipService.ToolTip="Retry download">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                                                <TextBlock Text="Retry"/>
                                            </StackPanel>
                                        </Button>

                                        <Button
                                            Grid.Column="3"
                                            Command="{Binding ElementName=Root, Path=ViewModel.RemoveFailedCommand}"
                                            CommandParameter="{Binding}"
                                            ToolTipService.ToolTip="Remove from list">
                                            <FontIcon Glyph="&#xE711;" FontSize="14"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Empty State -->
                <StackPanel
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Spacing="16"
                    Margin="0,60,0,0"
                    Visibility="{x:Bind ViewModel.HasAnyDownloads, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                    <FontIcon
                        Glyph="&#xE896;"
                        FontSize="64"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock
                        Text="No downloads"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock
                        Text="Browse the store to start downloading games"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        TextAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
